<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift_of_the_Givers_Foundation</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gift_of_the_Givers_Foundation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
</head>
<body>
    <header class="header">
        <nav class="nav">
            <a class="nav_logo" asp-controller="Home" asp-action="Index">GiversFoundation</a>

            <ul class="nav_items">
                <li class="nav_item">
                    <a class="nav_link" asp-controller="Home" asp-action="Index">Home</a>

                    @if (Context.Session.GetInt32("UserID") != null)
                    {
                        <!-- Logged-in user navigation -->
                        <a class="nav_link" asp-controller="Incident" asp-action="Index">Report Incidents</a>
                        <a class="nav_link" asp-controller="Incident" asp-action="Report">New Report</a>
                        <a class="nav_link" href="#">Donations</a>
                        <a class="nav_link" href="#">Volunteer</a>
                    }
                    else
                    {
                        <!-- Public navigation -->
                        <a class="nav_link" href="#">About Us</a>
                        <a class="nav_link" href="#">Our Work</a>
                        <a class="nav_link" href="#">Get Help</a>
                    }
                </li>
            </ul>

            <div class="btn_group">
                @if (Context.Session.GetInt32("UserID") != null)
                {
                    <!-- User is logged in -->
                    <div class="user-menu" style="display: flex; align-items: center; gap: 15px;">
                        <span style="color: white;">
                            <i class="uil uil-user"></i>
                            @Context.Session.GetString("UserName")
                        </span>
                        <span style="color: white; background: rgba(255,255,255,0.2); padding: 2px 8px; border-radius: 12px; font-size: 12px;">
                            @Context.Session.GetString("UserRole")
                        </span>
                        <form method="post" asp-controller="Account" asp-action="Logout" style="display: inline;">
                            <button type="submit" class="button" style="background: transparent; border: 1px solid white;">
                                <i class="uil uil-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <!-- User is not logged in -->
                    <button class="button" id="form-open-signup">SignUp</button>
                    <button class="button" id="form-open-login">SignIn</button>
                }
            </div>
        </nav>
    </header>


    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Gift_of_the_Givers_Foundation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
