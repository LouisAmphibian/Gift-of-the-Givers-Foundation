@model Gift_of_the_Givers_Foundation.Models.IncidentReport

@{
    ViewData["Title"] = "Report Incident";
}

<!-- Incident Page with Background -->
<section class="incident-page">
    <div class="incident-container">
        <div class="incident-form">
            <h2 class="text-center mb-4" style="color: #0b0217;">Report Disaster Incident</h2>

            <form asp-action="Report" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="input_box">
                            <input asp-for="Title" type="text" placeholder="Incident Title *" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input_box">
                            <select asp-for="IncidentType" required>
                                <option value="">Select Incident Type *</option>
                                <option value="Flood">Flood</option>
                                <option value="Fire">Fire</option>
                                <option value="Earthquake">Earthquake</option>
                                <option value="Storm">Storm</option>
                                <option value="Landslide">Landslide</option>
                                <option value="Drought">Drought</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="IncidentType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="input_box">
                            <input asp-for="Location" type="text" placeholder="Location *" required />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input_box">
                            <select asp-for="Severity" required>
                                <option value="">Select Severity Level *</option>
                                <option value="Low">Low - Minor impact</option>
                                <option value="Medium">Medium - Significant impact</option>
                                <option value="High">High - Serious impact</option>
                                <option value="Critical">Critical - Emergency situation</option>
                            </select>
                            <span asp-validation-for="Severity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="input_box">
                    <textarea asp-for="Description" placeholder="Incident Description * - Please provide detailed information about the incident, affected areas, immediate needs, etc." required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="button">Submit Incident Report</button>
                    <a href="@Url.Action("Index", "Home")" class="button" style="background: #6c757d; text-align: center; text-decoration: none; display: block;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}