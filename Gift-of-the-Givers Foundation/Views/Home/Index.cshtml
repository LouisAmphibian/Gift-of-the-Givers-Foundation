@{
    ViewData["Title"] = "Home Page";
}

<!--Home-->
<section class="home">
    <!-- Login/Signup Form - Centered with proper spacing -->
    <div class="form_container">
        <i class="uil uil-times form_close"></i>

        <!--SignIn Form-->
        <div class="form login_form">
            <form asp-controller="Account" asp-action="Login" method="post">
                <h2>SignIn</h2>

                <div class="input_box">
                    <input type="email" name="email" placeholder="Enter your email" required />
                    <i class="uil uil-envelope-alt email"></i>
                </div>

                <div class="input_box">
                    <input type="password" name="password" placeholder="Enter your password" required />
                    <i class="uil uil-lock password"></i>
                    <i class="uil uil-eye-slash pw_hide"></i>
                </div>

                <div class="option_field">
                    <span class="checkbox">
                        <input type="checkbox" id="check">
                        <label for="check">Remember me</label>
                    </span>
                    <a href="#" class="forgot_pw">Forgot password</a>
                </div>

                <button type="submit" class="button">SignIn Now</button>

                <div class="login_signup">
                    Don't have an account? <a href="#" id="go-signup">SignUp</a>
                </div>
            </form>
        </div>

        <!--SignUp Form-->
        <div class="form signup_form">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h2>SignUp</h2>

                <div class="input_box">
                    <input type="text" name="firstName" placeholder="Enter your first name" required />
                </div>

                <div class="input_box">
                    <input type="text" name="lastName" placeholder="Enter your last name" required />
                </div>

                <div class="input_box">
                    <input type="email" name="email" placeholder="Enter your email" required />
                    <i class="uil uil-envelope-alt email"></i>
                </div>

                <div class="input_box">
                    <input type="password" name="password" placeholder="Create password" required />
                    <i class="uil uil-lock password"></i>
                    <i class="uil uil-eye-slash pw_hide"></i>
                </div>

                <div class="input_box">
                    <input type="password" name="confirmPassword" placeholder="Confirm password" required />
                    <i class="uil uil-lock password"></i>
                    <i class="uil uil-eye-slash pw_hide"></i>
                </div>

                <div class="input_box">
                    <select name="role" required>
                        <option value="Donor">Donor</option>
                        <option value="Volunteer">Volunteer</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <button type="submit" class="button">SignUp Now</button>

                <div class="login_signup">
                    Already have an account? <a href="#" id="go-login">SignIn</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/site.js"></script>
}